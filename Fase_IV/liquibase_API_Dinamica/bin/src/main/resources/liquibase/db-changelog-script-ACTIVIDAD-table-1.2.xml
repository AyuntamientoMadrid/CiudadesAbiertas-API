<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    
    <changeSet author="Localidata" id="table-actividad">
        <createTable tableName="actividad">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="id_actividad" type="VARCHAR(50)"/>
            <column name="nombre" type="VARCHAR(400)"/>
            <column name="area_id" type="VARCHAR(50)"/>
            <column name="area_nombre" type="VARCHAR(200)"/>
            <column name="municipio_id" type="INT"/>
            <column name="municipio_nombre" type="VARCHAR(200)"/>                        
            <column name="url" type="VARCHAR(400)"/>
            <column name="descripcion" type="VARCHAR(2000)"/>           
        </createTable>
    </changeSet>
    
    <changeSet author="Localidata" id="PK-table-actividad">
        <addPrimaryKey columnNames="id" constraintName="pk_actividad" tableName="actividad"/>
    </changeSet>
    
    <changeSet id="ACTIVIDAD-tag-1.2" author="Localidata">
